<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.TCollegeInfoMapper">
    
    <resultMap type="TCollegeInfo" id="TCollegeInfoResult">
        <result property="id"    column="id"    />
        <result property="collegeName"    column="college_name"    />
        <result property="collegeCode"    column="college_code"    />
        <result property="directorId"    column="director_id"    />
        <result property="status"    column="status"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectTCollegeInfoVo">
        select id, college_name, college_code, director_id, status, create_time, update_time from t_college_info
    </sql>

    <select id="selectTCollegeInfoList" parameterType="TCollegeInfo" resultMap="TCollegeInfoResult">
        <include refid="selectTCollegeInfoVo"/>
        <where>  
            <if test="collegeName != null  and collegeName != ''"> and college_name like concat('%', #{collegeName}, '%')</if>
            <if test="collegeCode != null  and collegeCode != ''"> and college_code = #{collegeCode}</if>
            <if test="directorId != null "> and director_id = #{directorId}</if>
            <if test="status != null "> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectTCollegeInfoById" parameterType="Long" resultMap="TCollegeInfoResult">
        <include refid="selectTCollegeInfoVo"/>
        where id = #{id}
    </select>

    <insert id="insertTCollegeInfo" parameterType="TCollegeInfo" useGeneratedKeys="true" keyProperty="id">
        insert into t_college_info
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="collegeName != null and collegeName != ''">college_name,</if>
            <if test="collegeCode != null and collegeCode != ''">college_code,</if>
            <if test="directorId != null">director_id,</if>
            <if test="status != null">status,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="collegeName != null and collegeName != ''">#{collegeName},</if>
            <if test="collegeCode != null and collegeCode != ''">#{collegeCode},</if>
            <if test="directorId != null">#{directorId},</if>
            <if test="status != null">#{status},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateTCollegeInfo" parameterType="TCollegeInfo">
        update t_college_info
        <trim prefix="SET" suffixOverrides=",">
            <if test="collegeName != null and collegeName != ''">college_name = #{collegeName},</if>
            <if test="collegeCode != null and collegeCode != ''">college_code = #{collegeCode},</if>
            <if test="directorId != null">director_id = #{directorId},</if>
            <if test="status != null">status = #{status},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteTCollegeInfoById" parameterType="Long">
        delete from t_college_info where id = #{id}
    </delete>

    <delete id="deleteTCollegeInfoByIds" parameterType="String">
        delete from t_college_info where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>