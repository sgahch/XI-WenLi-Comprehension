    <sql id="selectTStudentScoreDetailVo">
        select id, student_id, system_id, item_id, score, evidence_url, description, status, audit_comment, auditor_id, submit_time, audit_time, create_time, update_time from t_student_score_detail
    </sql>

    <select id="selectTStudentScoreDetailList" parameterType="TStudentScoreDetail" resultMap="TStudentScoreDetailResult">
        <include refid="selectTStudentScoreDetailVo"/>
        <where>  
            <if test="studentId != null "> and student_id = #{studentId}</if>
            <if test="systemId != null "> and system_id = #{systemId}</if>
            <if test="itemId != null "> and item_id = #{itemId}</if>
            <if test="score != null "> and score = #{score}</if>
            <if test="evidenceUrl != null  and evidenceUrl != ''"> and evidence_url = #{evidenceUrl}</if>
            <if test="description != null  and description != ''"> and description = #{description}</if>
            <if test="status != null "> and status = #{status}</if>
            <if test="auditComment != null  and auditComment != ''"> and audit_comment = #{auditComment}</if>
            <if test="auditorId != null "> and auditor_id = #{auditorId}</if>
            <if test="submitTime != null "> and submit_time = #{submitTime}</if>
            <if test="auditTime != null "> and audit_time = #{auditTime}</if>
        </where>
    </select>
    
    <select id="selectTStudentScoreDetailById" parameterType="Long" resultMap="TStudentScoreDetailResult">
        <include refid="selectTStudentScoreDetailVo"/>
        where id = #{id}
    </select>

    <insert id="insertTStudentScoreDetail" parameterType="TStudentScoreDetail" useGeneratedKeys="true" keyProperty="id">
        insert into t_student_score_detail
        <trim prefix="(" suffix=")" suffixOverrides=",">
