    <delete id="deleteTStudentScoreDetailById" parameterType="Long">
        delete from t_student_score_detail where id = #{id}
    </delete>

    <delete id="deleteTStudentScoreDetailByIds" parameterType="String">
        delete from t_student_score_detail where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
